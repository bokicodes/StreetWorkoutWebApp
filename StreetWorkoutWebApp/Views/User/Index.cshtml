@using StreetWorkoutWebApp.ViewModels
@model List<UserVM>

<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">

          @foreach(var item in Model)
          {
              <div class="col">
              <div class="card shadow-sm">
              @if(string.IsNullOrEmpty(item.ProfileImageUrl))
              {
                <img class ="card-img-top" src="https://img.freepik.com/premium-vector/default-image-icon-vector-missing-picture-page-website-design-mobile-app-no-photo-available_87543-11093.jpg?w=826" width="100%" height="225" alt="Card image cap"> 
              }else
              {
                <img class ="card-img-top" src="@item.ProfileImageUrl" width="100%" height="225" alt="Card image cap">         
              }
                <div class="card-body">
                  <p class="card-text">@item.UserName</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a asp-controller="User" asp-action="Detail" asp-route-id="@item.Id" type="btn btn-success" class="btn btn-sm btn-outline-secondary">View</a>
                      @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                      {
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" type="btn btn-success" class="btn btn-danger btn-sm">Delete</a>
                      }
                    </div>
                    @* <small class="text-body-secondary">9 mins</small> *@
                  </div>
                </div>
              </div>
            </div>
          }
