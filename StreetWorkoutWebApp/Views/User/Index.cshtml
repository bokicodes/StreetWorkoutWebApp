@using StreetWorkoutWebApp.ViewModels
@model List<UserVM>

<div class="album py-5 bg-light">
    <div class="container">
      <div class="row">

          @foreach(var item in Model)
          {
              <div class="col">
              <div class="card shadow-sm">
               @* <img class ="card-img-top" src="@item.Image" width="100%" height="225" alt="Card image cap"> *@         
                <div class="card-body">
                  <p class="card-text">@item.UserName</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a asp-controller="User" asp-action="Detail" asp-route-id="@item.Id" type="btn btn-success" class="btn btn-sm btn-outline-secondary">View</a>
                      @if(User.Identity.IsAuthenticated && User.IsInRole("admin"))
                      {
                        <a asp-controller="Park" asp-action="Edit" asp-route-id="@item.Id" type="btn btn-success" class="btn btn-sm btn-outline-secondary">Edit</a>
                        <a asp-controller="Park" asp-action="Delete" asp-route-id="@item.Id" type="btn btn-success" class="btn btn-danger btn-sm">Delete</a>
                      }
                    </div>
                    @* <small class="text-body-secondary">9 mins</small> *@
                  </div>
                </div>
              </div>
            </div>
          }
